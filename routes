const express = require('express');
const router = express.Router();
const botWebhook = require('./bot');
const { getAllLeads, salvarLead } = require('./db');

router.get('/dashboard', async (req, res) => {
  try {
    const leads = await getAllLeads();
    res.render('dashboard', { leads });
  } catch (error) {
    console.error('Erro ao buscar leads:', error);
    res.status(500).send('Erro ao carregar painel');
  }
});

router.post('/webhook', botWebhook);

router.post('/lead', async (req, res) => {
  try {
    const { numero, servico, valorConta, vendedor, observacoes } = req.body;

    if (!numero || !servico) {
      return res.status(400).json({ erro: 'Campos obrigatórios faltando: número e serviço.' });
    }

    await salvarLead({ numero, servico, valorConta, vendedor, observacoes });

    console.log('✅ Lead recebido via /lead:', { numero, servico, valorConta, vendedor, observacoes });
    res.status(201).json({ mensagem: 'Lead recebido com sucesso!' });
  } catch (error) {
    console.error('❌ Erro ao salvar lead via /lead:', error);
    res.status(500).json({ erro: 'Erro ao salvar lead' });
  }
});

module.exports = router;
