<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Rumo Energy - CRM de Leads</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f7f9;
      font-family: 'Segoe UI', sans-serif;
    }
    header {
      background-color: #ffffff;
      border-bottom: 3px solid #f59331;
      padding: 1rem 2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .logo {
      height: 40px;
    }
    h2 {
      color: #4caf50;
      font-weight: 600;
    }
    .whatsapp-link {
      color: #25D366;
      text-decoration: none;
      font-weight: 500;
    }
    .whatsapp-link:hover {
      text-decoration: underline;
    }
    .table thead {
      background-color: #4caf50;
      color: white;
    }
    .badge {
      font-size: 0.9em;
    }
  </style>
</head>
<body>
  <header>
    <img src="/img/logo.png" alt="Rumo Energy" class="logo">
    <h2>ðŸ“‹ Painel de Leads - CRM</h2>
  </header>

  <div class="container mt-4">
    <table class="table table-bordered table-hover shadow-sm">
      <thead>
        <tr>
          <th>#</th>
          <th>WhatsApp</th>
          <th>ServiÃ§o</th>
          <th>Valor Conta</th>
          <th>Vendedor</th>
          <th>Status</th>
          <th>ObservaÃ§Ãµes</th>
          <th>Data</th>
        </tr>
      </thead>
      <tbody>
        <% leads.forEach((lead) => { %>
          <tr>
            <td><%= lead.id %></td>
            <td><a class="whatsapp-link" href="https://wa.me/<%= lead.numero %>" target="_blank"><%= lead.numero %></a></td>
            <td><%= lead.servico %></td>
            <td>R$ <%= lead.valorConta %></td>
            <td><%= lead.vendedor %></td>
            <td><span class="badge bg-primary"><%= lead.status %></span></td>
            <td><%= lead.observacoes || '-' %></td>
            <td><%= lead.data %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
